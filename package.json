{
  "name": "svelte-doc-llm",
  "version": "0.6.1",
  "description": "Convert markdown documentation to LLM-friendly format",
  "main": "index.js",
  "type": "module",
  "bin": {
    "svelte-doc-llm": "./index.js"
  },
  "scripts": {
    "llm": "node ./index.js",
    "debug:seealso": "cross-env DEBUGSEEALSO=true node ./index.js",
    "debug:component": "cross-env DEBUGCOMPONENT=true node ./index.js",
    "debug:converter": "cross-env DEBUGCONVERTER=true node ./index.js",
    "debug:filesystem": "cross-env DEBUGFILESYSTEM=true node ./index.js",
    "debug:config": "cross-env DEBUGCONFIG=true node ./index.js",
    "debug": "cross-env DEBUG=true DEBUGCOMPONENT=true DEBUGSEEALSO=true DEBUGCONVERTER=true DEBUGFILESYSTEM=true DEBUGCONFIG=true node ./index.js",
    "ch": "npx changeset",
    "cv": "npx changeset version",
    "cp": "npx changeset publish",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:unit": "vitest run tests/processors tests/config.test.js tests/fileSystem.test.js",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "svelte",
    "markdown",
    "llm",
    "documentation",
    "converter"
  ],
  "author": {
    "name": "Shinichi Okada",
    "url": "https://codewithshin.com"
  },
  "license": "MIT",
  "dependencies": {
    "glob": "^11.0.0",
    "gray-matter": "^4.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shinokada/svelte-doc-llm.git"
  },
  "bugs": {
    "url": "https://github.com/shinokada/svelte-doc-llm/issues"
  },
  "homepage": "https://github.com/shinokada/svelte-doc-llm#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@eslint/js": "^9.39.1",
    "@vitest/ui": "^4.0.3",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "vitest": "^4.0.3"
  }
}
